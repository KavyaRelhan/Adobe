# ===============================================
# Stage 1: Build the Vite React Frontend
# ===============================================
FROM node:18-alpine AS build-frontend
WORKDIR /app/frontend
COPY frontend/package*.json ./
RUN npm install
COPY frontend/ ./
RUN npm run build

# ===============================================
# Stage 2: Build the Python Backend + Final Image
# ===============================================
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for TTS support (ffmpeg)
RUN apt-get update && apt-get install -y ffmpeg

# Avoid Python writing .pyc files and allow proper logging
ENV PYTHONDONTWRITEBYTECODE 1
ENV PYTHONUNBUFFERED 1

# Install backend dependencies
COPY backend/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy backend application code
COPY backend/src/ ./src/

# Copy ML models if applicable
COPY backend/models/ ./models/


# Copy built frontend static files
# Using Vite: build output is "dist"
COPY --from=build-frontend /app/frontend/dist ./static

# Expose backend port
EXPOSE 8000

# Entry point
CMD ["uvicorn", "src.main:app", "--host", "0.0.0.0", "--port", "8000"]
